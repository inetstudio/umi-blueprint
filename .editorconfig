indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[*.{yml,yaml}]
indent_size = 2

[*.vue]
indent_size = 2

[{*.css, *.json}]
indent_size = 2

[docker-compose.yml]
indent_size = 4